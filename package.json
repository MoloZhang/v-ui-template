{
  "name": "v-ui-template",
  "sideEffects": false,
  "description": "Quickly create templates for vue sfc components",
  "version": "1.2.2",
  "repository": "https://github.com/ckpack/v-ui-template",
  "main": "dist/index.js",
  "module": "es/index.js",
  "unpkg": "dist/index.min.js",
  "author": "chenkai",
  "keywords": [
    "v-ui-template",
    "sfc",
    "rollup"
  ],
  "files": [
    "dist/*",
    "src/*",
    "es/*"
  ],
  "scripts": {
    "dev": "vue-cli-service serve dev/serve.js",
    "build": "yarn gen:compoents && yarn build:es && yarn build:dist",
    "build:es": "rm -rf ./es && rollup --config ./build/build.es.js",
    "build:dist": "rm -rf ./dist && rollup --config ./build/build.dist.js",
    "build:style": "",
    "build:website": "vue-cli-service build --dest website dev/serve.js",
    "lint": "eslint --fix --ext .js,.vue ./",
    "gen": "node ./scripts/gen.js",
    "gen:compoents": "node ./scripts/gen-compoents.js",
    "release": "standard-version && git push &&  git push origin --tags",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@vue/cli-service": "^4.5.15",
    "@vue/compiler-sfc": "^3.2.22",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "eslint": "^8.3.0",
    "eslint-plugin-vue": "^8.1.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.1",
    "postcss-prefixer": "^2.1.3",
    "rollup": "^2.60.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.43.5",
    "sass-loader": "^12.3.0",
    "standard-version": "^9.3.2",
    "vue": "3.2.22"
  },
  "peerDependencies": {
    "postcss": "^8.0.0",
    "vue": "^3.2.6"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "eslint --fix"
    ]
  }
}
