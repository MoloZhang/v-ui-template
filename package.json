{
  "name": "v-ui-template",
  "sideEffects": false,
  "description": "Quickly create a component library for Vue 3",
  "version": "1.7.0",
  "repository": "https://github.com/ckpack/v-ui-template",
  "homepage": "https://ckpack.github.io/v-ui-template/",
  "type": "module",
  "main": "es/index.js",
  "module": "es/index.js",
  "unpkg": "dist/index.min.js",
  "author": "chenkai",
  "keywords": [
    "vue",
    "v-ui",
    "vue-ui",
    "sfc",
    "v-ui-template"
  ],
  "files": [
    "dist/*",
    "src/*",
    "es/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:build": "vite build",
    "prebuild": "rm -rf ./es && rm -rf ./dist && npm run gen:compoents",
    "build": "npm run build:es && npm run build:dist",
    "postbuild": "npm run build:style",
    "build:es": "rollup --config ./build/build.es.js",
    "build:dist": "rollup --config ./build/build.dist.js",
    "build:style": "sass --no-source-map --style=compressed ./src:es && sass --no-source-map --style=compressed ./src/styles/index.scss:dist/index.css",
    "lint": "eslint --fix --ext js,ts,mjs,cjs,tsx,jsx,vue ./",
    "gen": "node ./scripts/gen.js",
    "postgen": "npm run gen:compoents",
    "gen:compoents": "node ./scripts/gen-compoents.js",
    "release": "standard-version",
    "postrelease": "git push &&  git push origin --tags",
    "prepare": "husky install",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "outdated": "npm outdated -l"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@vitejs/plugin-vue": "^2.0.1",
    "eslint": "^8.5.0",
    "eslint-plugin-vue": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "rollup": "^2.62.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.45.1",
    "standard-version": "^9.3.2",
    "vite": "^2.7.9",
    "vitepress": "0.20.10",
    "vue": "3.2.26"
  },
  "peerDependencies": {
    "vue": "^3.2.x"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue}": [
      "eslint --fix"
    ]
  },
  "dependencies": {}
}
